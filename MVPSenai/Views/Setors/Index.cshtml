@model IEnumerable<MVPSenai.Models.Setor>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Cadastro Novo Setor</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeSetor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeSetor)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdSetor">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdSetor">Detalher</a> |
                <a asp-action="Delete" asp-route-id="@item.IdSetor">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
