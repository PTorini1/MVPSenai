@model IEnumerable<MVPSenai.Models.Funcionario>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Cadastrar Novo Funcionario</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Senha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Equipamentos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Setor.NomeSetor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Senha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Equipamentos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Setor.NomeSetor)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdFuncionario">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdFuncionario">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.IdFuncionario">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
